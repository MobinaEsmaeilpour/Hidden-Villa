@page "/registration"
@* @inject IAuthenticationService authenticationService
@inject NavigationManager navigationManager
 *@
<EditForm Model="userForRegisteration" OnValidSubmit="RegisterUser" class="pt-4">
    <DataAnnotationsValidator/>
    <div class="py-4">
        <div class=" row form-group ">
            <div class="col-6 offset-3 ">
                <div class="card border">
                    <div class="card-body px-lg-5 pt-4">
                        <h3 class="col-12 text-success text-center py-2">
                            <strong>Sign Up</strong>
                        </h3>

                        @if(ShowRegistrationErrors)
                        {
                           <div>
                               @foreach(var error in Errors)
                               {
                                    <p class="text-danger text-center">@error</p>
                               }
                            </div>

                        }

                        <hr style="background-color:aliceblue" />
                        <div class="py-2">
                            <InputText @bind-Value="userForRegisteration.Name" class="form-control" placeholder="Name..."
                                   style="color: green; font-weight: bold;" />
                            <ValidationMessage For="(()=>userForRegisteration.Name)"/>

                        </div>
                        <div class="py-2">
                            <InputText @bind-Value="userForRegisteration.Email" class="form-control" placeholder="Email..."
                                   style="color: green; font-weight: bold;" />
                            <ValidationMessage For="(()=>userForRegisteration.Email)" />

                        </div>
                        <div class="py-2 input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"> +98</span>
                            </div>
                            <InputText @bind-Value="userForRegisteration.PhoneNo" class="form-control" placeholder="Phone number..."
                                   style="color: green; font-weight: bold;" />
                            <ValidationMessage For="(()=>userForRegisteration.PhoneNo)" />

                        </div>
                        <div class="container">
                            <div class="row py-2">
                                <div class="col-md-6">
                                    <InputText @bind-Value="userForRegisteration.Password" type="password" id="password" placeholder="Password..." class="form-control"
                                           style="color: green; font-weight: bold;" />
                                    <ValidationMessage For="(()=>userForRegisteration.Password)" />
                                </div>
                                <div class="col-md-6">
                                    <InputText @bind-Value="userForRegisteration.ConfirmPassword" type="password" id="confirm" class="form-control" placeholder="Confirm Password..."
                                               style="color: green; font-weight: bold;" />
                                    <ValidationMessage For="(()=>userForRegisteration.ConfirmPassword)" />
                                </div>

                            </div>
                        </div>
                        <hr style="background-color:aliceblue" />
                        <div class="py-2">
                            @if(IsPRocessing)
                            {
                                <button type="submit" class="btn btn-success btn-block disabled w-100"><i class="fas fa-sign-in-alt"></i> Please Wait</button>
                            }
                            else
                            {
                            <button type="submit" class="btn btn-success btn-block w-100"><i class="fas fa-sign-in-alt"></i> Register</button>
                            } 
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</EditForm>

